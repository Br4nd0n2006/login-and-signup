def sign_up_validate():
	username = user_signup_textbox.value.strip()
	password = PW_signup_textbox.value.strip()
	firstname = FN_textbox.value.strip()

	if not username or not password or not firstname:
		info('Error', 'All fields must be completed.')
	else:
		sign_up_query = "insert into user (user_name, user_password, user_firstname) VALUES (?, ?, ?)"
		execute_sql(database_file, sign_up_query, (username, password, firstname))
		info('Sign Up', 'Success')
		user_signup_textbox.value = ""
		PW_signup_textbox.value = ""
		FN_textbox.value = ""
		SignUpApp.hide()
		app.show()
